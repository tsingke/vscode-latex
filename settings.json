{
  "workbench.colorTheme": "MacOS Modern Light - Ventura Xcode Default",
  "workbench.iconTheme": "vscode-icons",
  "editor.formatOnType": true,
  "editor.fontFamily": "SF Mono, Menlo, Monaco, Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "chatgpt.lang": "cn",
  "chatgpt.temperature": 0.1,
  "chatgpt.model": "gpt-4",
  "cmake.showOptionsMovedNotification": false,
  "cmake.configureOnOpen": true,
  "debug.onTaskErrors": "showErrors",
  "tabnine.experimentalAutoImports": true,

      // LaTeX
    // 不在保存的时候自动编译
    "latex-workshop.latex.autoBuild.run": "never",
    // 编译工具
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOCFILE%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    // 编译命令
    "latex-workshop.latex.recipes": [
        {
            "name": "xe->bib->xe->xe",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "xelatex*2",
            "tools": [
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex"
            ]
        },
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "pdf->bib->pdf->pdf",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        }
    ],
     "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk"
],
    
    "security.workspace.trust.untrustedFiles": "open",
    "editor.minimap.enabled": false,
    "chat.editor.wordWrap": "on",
    "editor.wordWrap": "bounded",
    "editor.formatOnPaste": true,
    "editor.wordWrapColumn": 120,
    "vsicons.dontShowNewVersionMessage": true,
    "indentRainbow.ignoreErrorLanguages": [
        
        "markdown"
    ],

    "workbench.startupEditor": "none",
    "zotero.latexCommand": "cite",
    "zotero.minimizeAfterPicking": true,
    "latex-utilities.zotero.latexCommand": "cite",
    "explorer.confirmDelete": false,
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.synctex.afterBuild.enabled": true,

    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.viewerArgs": [
        "-synctex=1",
        "-interaction=nonstopmode"
    ],
    "texlab.bibtexFormatter": "latexindent",
    "editor.inlayHints.enabled": "off",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#1073cf2d",
        "editor.lineHighlightBorder": "#9fced11f"
    },
    "editor.guides.indentation": false,
    "editor.guides.bracketPairs": false,

    
    // // 使能从 VSCode跳转到 Skim 里相应位置
    // // external pdf viewer
    // "latex-workshop.view.pdf.viewer": "external",
